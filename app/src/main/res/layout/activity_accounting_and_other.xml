<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accounting_and_other">

    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/our_story_color"
        android:keepScreenOn="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:id="@+id/grommet_icons_menu_ek1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2.83dp"
                android:contentDescription="vector_ek30"
                android:src="@drawable/menu" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountingservices_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/fffff">

        <TextView
            android:id="@+id/start_own_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Accounting Services"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/takefirststep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_own_business"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="We Keep Everything Organized For You In One Place.."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/takefirststep"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Payroll Services"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Data Entry Bookkeeping(Sales and Expenses)"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Payroll Remittance"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bank Reconciliation"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frameforgettouch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountingservices_points"
        android:background="@drawable/baclground_pt">
        //LETS TALK

        <RelativeLayout
            android:id="@+id/letstalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/let_s_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@new"
                android:gravity="center"
                android:text="@string/let_s_talk_string"
                android:textColor="@color/individual___corporates_accounting_services_color"
                android:textSize="16sp" />

        </RelativeLayout>

        // GET IN TOUCH

        <RelativeLayout
            android:id="@+id/get_in_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/letstalk"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/get_in_touch_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Inter"
                android:text="@string/get_in_touch__string"
                android:textColor="@color/individual___corporates_accounting_services_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        //SCHEDULE APPOINTMTNT

        <RelativeLayout
            android:id="@+id/sch_appoinmnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_in_touch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/schedule_appointmtnt_btn">

            <TextView
                android:id="@+id/schedule_an_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@new"
                android:text="@string/schedule_an_appointment_string"
                android:textColor="@color/_bg__homescreen_ek2_color"
                android:textSize="16sp" />

        </RelativeLayout>

        // contact us informations



    </RelativeLayout>

</RelativeLayout>