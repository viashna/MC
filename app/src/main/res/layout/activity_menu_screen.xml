<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_screen"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:text="More"
            android:textColor="@color/our_story_color"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/our_story_color"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
       >

        <RelativeLayout
            android:id="@+id/home_menu_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/menuitems_backgroud">


            <TextView
                android:id="@+id/homemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/homemenubutton"
                android:gravity="center_horizontal"
                android:text="Home"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/homemenubutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_48">

            </ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pt_menu_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menuitems_backgroud"

            >


            <TextView
                android:id="@+id/personaltaxmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/personaltaxmenubtn"
                android:gravity="center_horizontal"
                android:text="Personal Taxation Service"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/personaltaxmenubtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/per48">

            </ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ct_menu_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menuitems_backgroud">


            <TextView
                android:id="@+id/corporation_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/corporatetaxmenu_btn"
                android:gravity="center_horizontal"
                android:text="Corporate Taxation Service"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/corporatetaxmenu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/company">

            </ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/br_menu_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menuitems_backgroud"

            >


            <TextView
                android:id="@+id/ct_reg_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/ct_reg_menu_btn"
                android:gravity="center_horizontal"
                android:text="Corporation Registration"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/ct_reg_menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/grp_48">

            </ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ba_menu_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menuitems_backgroud"

            >


            <TextView
                android:id="@+id/bus_advices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/adviceicon"
                android:gravity="center_horizontal"
                android:text="Accounting Services and Advices"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/adviceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/bb">

            </ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_us_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menuitems_backgroud"

            >


            <TextView
                android:id="@+id/contact_us_frametextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/contact_menu_icon"
                android:gravity="center_horizontal"
                android:text="Contact Us"
                android:textColor="@drawable/button_text_color" />

            <ImageButton
                android:id="@+id/contact_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/contactusicon">

            </ImageButton>

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>